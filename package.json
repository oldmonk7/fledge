{
  "name": "fledge-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev --workspace=frontend\" \"pnpm run start:dev --workspace=backend\"",
    "build": "pnpm run build --recursive",
    "start": "concurrently \"pnpm run start --workspace=frontend\" \"pnpm run start:prod --workspace=backend\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}